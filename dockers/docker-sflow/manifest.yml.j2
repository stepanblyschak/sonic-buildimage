---
version: 1.0.0
package:
  name: {{ name }}
  version: {{ version }}
  depends:
    - database >=1.0.0
    - syncd >=1.0.0
  sonic-version: '>=1.0.0'
service:
  name: sflow
  requires:
    - database
    - updategraph
  requisite:
    - swss
  after:
    - database
    - swss
    - syncd
  before:
    - ntp-config
  asic-service: False
  host-service: True
container:
  privileged: True
  volumes:
    - /etc/sonic:/etc/sonic:ro
    - /host/warmboot:/var/warmboot

